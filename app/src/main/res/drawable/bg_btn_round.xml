<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                >
                <shape
                    android:shape="oval">
                    <size
                        android:width="90dp"
                        android:height="90dp"/>
                    <gradient
                        android:startColor="#48000000"
                        android:endColor="#00000000"
                        android:gradientRadius="40dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item
                android:top="11dp"
                android:left="15dp"
                android:right="15dp"
                android:bottom="20dp">

                <shape
                    android:shape="oval">
                    <size
                        android:width="45dp"
                        android:height="45dp"/>
                    <solid
                        android:color="@color/lightPink" />
                </shape>

            </item>

        </layer-list>
    </item>

</selector>